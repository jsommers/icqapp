<div class="card" id="qcard">
  <div class="card-body">
    <h3 class="card-title" data-ids="<%= @course.id %> <%= @qid %> <%= @pid %>" id="squestion">
      <%= @qname  %>
    </h3>
    <h4 class="card-subtitle">
      <%= @qprompt %>
    </h4>
    <hr/>
    <div class="card-text">
      <%= form_with model: @response, :method => :post, :url => course_question_poll_poll_responses_path(@course, @question, @poll), :local => true do %>
        <div class="form-group">
          <%= question_input(@question, @response)  %>
          <%= submit_tag @question.prompt %>
        </div>
      <% end %>
    </div>
  </div>
</div>
