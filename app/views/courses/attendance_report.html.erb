<div id="main">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Courses", courses_path %>
    </li>
    <li class="breadcrumb-item active">
      <%= @course.name %>
    </li>
  </ol>

<h3>
  <%= "Attendance report for #{@course.name}" %>
</h3>
<table class="table-striped table-bordered">
  <tr>
    <th>
      <p class="vertical-orientation">Date</p>
    </th>
    <% @course.students.each do |s| %>
      <th>
        <p class="vertical-orientation">
          <%= strip_email_domain(s.email) %>
        </p>
      </th>
    <% end %>
    <th>
      <p class="vertical-orientation">Total</p>
    </th>
  </tr>
  <% @attendance_matrix.each do |row| %>
    <tr>
      <td class="small">
        <%= "#{row[0]}" %>
      </td>
      <% row[1..].each do |val| %>
        <td class="small">
          <%= "#{val}" %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
</div>
